<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="accountInfo"
            type="com.aiden.accountwallet.data.vo.AccountInfo" />
        <variable
            name="click"
            type="com.aiden.accountwallet.base.listener.ViewClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_account_info"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:cardCornerRadius="4dp"
        app:strokeColor="@color/mono300"
        app:strokeWidth=".5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="4dp"
        android:onClick="@{(v)->click.onViewClick(v)}"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_provider_name"
                style="@style/boldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{accountInfo.providerName}"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_type_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_type_tag"
                tools:text="Naver"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_type_tag"
                style="@style/lightTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{accountInfo.typeTag}"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:ems="4"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_base_tag"
                tools:text="개인 계정"
                tools:background="@drawable/bg_base_tag"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_update_date"
                style="@style/baseTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text='@{accountInfo.updateDate + @string/suffix_registered}'
                tools:text="@string/suffix_registered"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
