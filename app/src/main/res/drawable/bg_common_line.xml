<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/mono500">

    <item>
        <!-- 버튼의 모양 -->
        <shape android:shape="rectangle">
            <!-- 버튼 배경색 -->
            <solid android:color="@color/none" />
            <!-- 테두리 -->
            <stroke
                android:width="1dp"
                android:color="@color/mono600" />
            <!-- 둥근 코너 -->
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>
</ripple>