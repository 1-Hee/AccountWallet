<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/brown800">

    <item>
        <!-- 버튼의 모양 -->
        <shape android:shape="rectangle">
            <!-- 버튼 배경색 -->
            <solid android:color="@color/brown700" />
            <!-- 테두리 -->
            <stroke
                android:width="0dp"
                android:color="@color/black" />
            <!-- 둥근 코너 -->
            <corners
                android:radius="4dp"
                />
        </shape>
    </item>
</ripple>